{
  "manifest_version": 3,
  "name": "TODO List",
  "version": "1.0",
  "description": "A TODO list for daily worklog save",
  "icons": {
    "128": "fav_icon.png",
    "48": "fav_icon.png",
    "16": "icon1.png"
  },

  "action": {
    "default_icon": "fav_icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "scripting"
  ],

  "options_page": "options.html"

}